<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC06_Module08.AddStudentRecordsPage">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
        <Label Text="Add Student Record" FontAttributes="Bold" FontSize="20" HorizontalTextAlignment="Center" TextColor="#333333" />

        <!-- Add Entry fields for student details -->
        <Entry x:Name="xName" Placeholder="Name" Margin="0,20,0,0" FontSize="16" />
        <Entry x:Name="xRollNumber" Placeholder="Roll Number" Margin="0,10,0,0" FontSize="16" />
        <Entry x:Name="xAge" Placeholder="Age" Margin="0,10,0,0" FontSize="16" />
        <Entry x:Name="xEmail" Placeholder="Email" Margin="0,10,0,0" FontSize="16" />

        <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
            <Button Text="Add Record" Clicked="OnAddRecord" BackgroundColor="#4CAF50" TextColor="White" FontSize="18" CornerRadius="5" HeightRequest="50" FlexLayout.Grow="1" />
            <Button Text="Cancel" Clicked="OnCancel" BackgroundColor="#CCCCCC" TextColor="White" FontSize="18" CornerRadius="5" HeightRequest="50" FlexLayout.Grow="1" />
        </StackLayout>
    </StackLayout>

</ContentPage>
